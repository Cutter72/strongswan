<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/brandedCardBackground"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/checkable_card_color"
        android:orientation="vertical"
        android:paddingTop="4dip"
        android:paddingBottom="6dip">

        <TextView
            android:id="@+id/profile_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/BrandedTextAppearanceMedium" />

        <TextView
            android:id="@+id/profile_item_gateway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/BrandedTextAppearanceSmall"
            android:textColor="@color/brandedTextSecondary" />

        <TextView
            android:id="@+id/profile_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textAppearance="@style/BrandedTextAppearanceSmall"
            android:textColor="@color/brandedTextSecondary" />

        <TextView
            android:id="@+id/profile_item_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="@style/BrandedTextAppearanceSmall"
            android:textColor="@color/brandedTextSecondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
