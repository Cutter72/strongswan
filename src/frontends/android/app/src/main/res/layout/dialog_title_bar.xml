<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginTop="-10dp"
    android:layout_marginRight="-6dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/ic_close"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/small_50"
        android:layout_weight="1"
        android:foregroundGravity="center_vertical"
        android:paddingTop="@dimen/normal_150"
        android:ellipsize="end"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/brandedBlack" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/small_50"
        android:layout_marginRight="@dimen/small_50"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="9999dp"
        app:icon="@drawable/ic_close"
        app:iconGravity="textEnd"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:iconTint="@color/brandedBlack" />

</LinearLayout>
