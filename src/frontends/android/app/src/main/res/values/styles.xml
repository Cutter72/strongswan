<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Strongswan theme -->
    <style name="ApplicationTheme.Base" parent="BrandedTheme">
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:alertDialogTheme">@style/ApplicationThemeDialog</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="ApplicationTheme.Base.NoActionBar" parent="ApplicationTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Strongswan theme -->
    <style name="ApplicationTheme" parent="ApplicationTheme.Base">
    </style>

    <style name="ApplicationThemeDialog.Base" parent="BrandedDialog">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ApplicationThemeDialog" parent="ApplicationThemeDialog.Base">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="TransparentActivity" parent="ApplicationTheme.Base.NoActionBar">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BrandedTextAppearanceSmall" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/branded_text_color_selector</item>
    </style>

    <style name="BrandedTextAppearanceMedium" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">@color/branded_text_color_selector</item>
    </style>

    <style name="BrandedTextAppearanceLarge" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/branded_text_color_selector</item>
    </style>

</resources>
